class Solution {
    public int myAtoi(String s) {
        // Your code here
        int i=0;
        int n=s.length();
        int sign=1;
        int res=0;
        
        while(i<n&&s.charAt(i)==' '){
            i++;
        }
        if(i<n&&s.charAt(i)=='+'||s.charAt(i)=='-'){
            sign=(s.charAt(i)=='-')?-1:1;
            i++;
        }
        while(i<n&&Character.isDigit(s.charAt(i))){
            int d=s.charAt(i)-'0';
            if(res>(Integer.MAX_VALUE-d)/10){
                return(sign==1)?Integer.MAX_VALUE:Integer.MIN_VALUE;
            
            }
            res=res*10+d;
            i++;
        }
        return res*sign;
    }
}
